<h1>Do this</h1>

<div id="task-description">
  <p>Task: <%= @task.description %></p>
  <p>Due: <%= @task.due %></p>
  <p><%= @task.state %></p>
  <p>
    <%= link_to 'Edit task', edit_task_path(@task) %> |
    <%= link_to 'Delete task', task_path(@task), method: :delete, data: {confirm: 'Delete task?'} %>
  </p>
</div>