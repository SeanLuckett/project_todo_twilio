<h1>Stuff you need to do</h1>

<div id="task-list">
  <table>
    <thead>
    <tr>
      <th style="text-align: left;">Task</th>
      <th>Due date</th>
      <th colspan="2" style="text-align: left;">State</th>
    </tr>
    </thead>
    <tbody>
    <% @tasks.each do |task| %>
      <%= render partial: 'task', locals: { task: task } %>
    <% end %>
    </tbody>
  </table>
</div>
